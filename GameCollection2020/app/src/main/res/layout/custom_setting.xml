<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_layout">

    <TextView
        android:id="@+id/setting_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bubblebobble"
        android:text="SETTING"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/volume_thumb"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/volume_unmute"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_title" />

    <TextView
        android:id="@+id/volume_label"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bubblebobble"
        android:gravity="center_vertical"
        android:text="SOUND"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/volume_thumb"
        app:layout_constraintTop_toBottomOf="@id/setting_title" />

    <CheckBox
        android:id="@+id/sound_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:checked="true"
        android:gravity="center_vertical"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_title" />


    <ImageButton
        android:id="@+id/about_thumb"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/about_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/volume_label" />

    <TextView
        android:id="@+id/about_label"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bubblebobble"
        android:gravity="center_vertical"
        android:text="ABOUT"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/volume_thumb"
        app:layout_constraintTop_toBottomOf="@id/volume_label" />


    <TextView
        android:id="@+id/member1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/bubblebobble"
        android:gravity="center_vertical"
        android:text="1753021 - Dinh Nguyen Hanh Dung"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/volume_thumb"
        app:layout_constraintTop_toBottomOf="@id/about_label" />

    <TextView
        android:id="@+id/member2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/bubblebobble"
        android:gravity="center_vertical"
        android:text="1753024 - Tran Quoc Truong An"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/volume_thumb"
        app:layout_constraintTop_toBottomOf="@id/member1" />

    <TextView
        android:id="@+id/member3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/bubblebobble"
        android:gravity="center_vertical"
        android:text="1753027 - Le Dang Hoang An"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/volume_thumb"
        app:layout_constraintTop_toBottomOf="@id/member2" />

    <TextView
        android:id="@+id/member4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/bubblebobble"
        android:gravity="center_vertical"
        android:text="1753045 - Lu Anh Duy"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/volume_thumb"
        app:layout_constraintTop_toBottomOf="@id/member3" />

    <TextView
        android:id="@+id/member5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/bubblebobble"
        android:gravity="center_vertical"
        android:text="1753046 - Nguyen Dang Duy"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/volume_thumb"
        app:layout_constraintTop_toBottomOf="@id/member4" />

    <Button
        android:id="@+id/setting_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:fontFamily="@font/bubblebobble"
        android:text="CLOSE"
        android:background="@drawable/custom_button"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/member5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>