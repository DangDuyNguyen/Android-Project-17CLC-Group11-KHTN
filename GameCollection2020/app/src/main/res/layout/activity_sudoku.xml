<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/viewInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/scoreTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Score"
            android:textSize="35dp"/>
        <Spinner
            android:id="@+id/ingameSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <Button
            android:id="@+id/Sudoku_close_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/close_button"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/scoreInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/scoreTitle"
            android:text="0"
            android:textSize="50dp"/>
        <TextView
            android:id="@+id/levelInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/scoreInfo"
            android:text="Easy"/>
        <TextView
            android:id="@+id/timeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/scoreInfo"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.ndduy.gamecollection2020.Sudoku.UI.SudokuBoard
            android:id="@+id/sudoku_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:keepScreenOn="true" />

    </LinearLayout>

    <com.ndduy.gamecollection2020.Sudoku.UI.InputControl
        android:id="@+id/inputMethods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
