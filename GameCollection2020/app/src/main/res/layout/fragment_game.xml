<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentGame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".GameFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gameMenuBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_layout"
        android:foregroundGravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        >

        <LinearLayout
            android:id="@+id/AnimalRacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/animalcrossbtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/animal_crossing_icon" />

            <TextView
                android:id="@+id/animalcrossTxtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="@drawable/custom_status"
                android:fontFamily="@font/bubblebobble"
                android:text="Animal Racing"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Snake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/AnimalRacing"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/snakebtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="#00FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/snake_icon" />

            <TextView
                android:id="@+id/snakeTxtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="@drawable/custom_status"
                android:fontFamily="@font/bubblebobble"
                android:text="Snake!"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/CardFlipper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="70dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/AnimalRacing"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/cardflipbtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="#00FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/card_flipper_icon" />

            <TextView
                android:id="@+id/cardflipTxtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="@drawable/custom_status"
                android:fontFamily="@font/bubblebobble"
                android:text="Card Flipper"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Sudoku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="70dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/AnimalRacing"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/CardFlipper"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/sudokubtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="#00FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/sudoku_icon" />

            <TextView
                android:id="@+id/sudokuTxtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="@drawable/custom_status"
                android:fontFamily="@font/bubblebobble"
                android:text="Sudoku"
                android:textSize="20sp" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
