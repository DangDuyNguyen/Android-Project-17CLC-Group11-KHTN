<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/track"
    tools:context="com.ndduy.gamecollection2020.SnakeActivity">

    <com.ndduy.gamecollection2020.SnakePanelView
        android:id="@+id/snake_view"
        android:layout_width="384dp"
        android:layout_height="313dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="164dp"
        app:layout_constraintBottom_toTopOf="@+id/start_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TextView_point"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/top_btn"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_marginTop="541dp"
        android:background="@drawable/custom_button"
        android:text="TOP"
        android:textColor="@android:color/black"
        android:fontFamily="@font/bubblebobble"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/left_btn"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_button"
        android:text="LEFT"
        android:textColor="@android:color/black"
        android:fontFamily="@font/bubblebobble"
        app:layout_constraintEnd_toStartOf="@+id/top_btn"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_btn" />

    <Button
        android:id="@+id/right_btn"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/custom_button"
        android:text="RIGHT"
        android:textColor="@android:color/black"
        android:fontFamily="@font/bubblebobble"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/top_btn"
        app:layout_constraintTop_toTopOf="@+id/left_btn" />

    <Button
        android:id="@+id/bottom_btn"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/custom_button"
        android:text="BOTTOM"
        android:textColor="@android:color/black"
        android:fontFamily="@font/bubblebobble"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/right_btn" />

    <Button
        android:id="@+id/start_btn"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="533dp"
        android:background="@drawable/restart_btn_background"
        android:text="START"
        android:textColor="@android:color/white"
        android:fontFamily="@font/bubblebobble"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/coin_icon"
        android:layout_width="44dp"
        android:layout_height="50dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="7dp"
        android:src="@drawable/coin_icon"
        app:layout_constraintEnd_toStartOf="@+id/TextView_point"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextView_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:fontFamily="@font/bubblebobble"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/Snake_close_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/close_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
