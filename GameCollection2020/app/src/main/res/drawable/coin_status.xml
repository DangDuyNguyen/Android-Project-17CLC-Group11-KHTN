<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">

            <corners

                android:radius="20dp" />

            <gradient
                android:angle="45"
                android:endColor="#fff"
                android:startColor="@color/lightpink"
                android:type="linear" />

            <size
                android:width="20dp"
                android:height="40dp" />

            <stroke
                android:width="2dp"
                android:color="#000" />

        </shape>
    </item>

    <item android:drawable="@drawable/coin_icon"
        android:width="38dp"
        android:height="38dp"
        android:left="30dp"
        android:gravity="end|center_vertical"
        >

    </item>

</layer-list>