<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <RelativeLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingVertical="20dp"
        android:paddingHorizontal="20dp">
        <LinearLayout
            android:id="@+id/liBtnLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/undoBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:drawableTop="@drawable/ic_action_name_undo_icon"
                android:text="Undo"/>
            <Button
                android:id="@+id/resetBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:drawableTop="@drawable/ic_action_name_reset_icon"
                android:text="Reset"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/hintBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:drawableTop="@drawable/ic_action_name_hint_icon"
                    android:text="Hint"/>
                <TextView
                    android:id="@+id/numHint"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right|end|top"
                    android:background="@drawable/circle_textview"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="15dp"
                    android:elevation="10dp"
                    android:textColor="#ffffff"/>
            </FrameLayout>
            <Button
                android:id="@+id/switchInputBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:drawableTop="@drawable/ic_action_name_numpad_icon"
                android:text="Numpad"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout android:id="@+id/numpadLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:gravity="center_horizontal">
        <LinearLayout
            android:id="@+id/liNumpadLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.11"
                android:background="#ffffff"
                android:text="1"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.11"
                android:background="#ffffff"
                android:text="2"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.11"
                android:background="#ffffff"
                android:text="3"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.11"
                android:background="#ffffff"
                android:text="4"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.11"
                android:background="#ffffff"
                android:text="5"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.11"
                android:background="#ffffff"
                android:text="6"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.11"
                android:background="#ffffff"
                android:text="7"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.11"
                android:background="#ffffff"
                android:text="8"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.11"
                android:background="#ffffff"
                android:text="9"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>