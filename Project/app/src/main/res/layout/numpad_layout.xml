<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingVertical="20dp"
        android:paddingHorizontal="20dp">
        <LinearLayout
            android:id="@+id/liBtnLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/undoBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_action_name_undo_icon"
                android:text="Undo"/>
            <Button
                android:id="@+id/resetBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_action_name_reset_icon"
                android:text="Reset"/>
            <Button
                android:id="@+id/hintBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_action_name_hint_icon"
                android:text="Hint"/>
            <Button
                android:id="@+id/switchInputBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_action_name_numpad_icon"
                android:text="Numpad"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout android:id="@+id/numpadLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:gravity="center_horizontal">
        <LinearLayout
            android:id="@+id/liNumpadLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btn2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btn3"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btn4"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btn5"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btn6"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btn7"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btn8"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btn9"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>