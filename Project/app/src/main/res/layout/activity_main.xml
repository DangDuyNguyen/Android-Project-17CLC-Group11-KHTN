<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/viewInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/levelInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Easy" />
        <TextView
            android:id="@+id/scoreInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="0" />
        <TextView
            android:id="@+id/timeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="0" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.example.project.ui.SudokuBoard
            android:id="@+id/sudoku_board"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:keepScreenOn="true" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingVertical="20dp"
        android:paddingHorizontal="20dp">
        <LinearLayout
            android:id="@+id/liBtnLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/undoBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_action_name_undo_icon"
                android:text="Undo"/>
            <Button
                android:id="@+id/resetBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_action_name_reset_icon"
                android:text="Reset"/>
            <Button
                android:id="@+id/hintBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_action_name_hint_icon"
                android:text="Hint"/>
            <Button
                android:id="@+id/numpadBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_action_name_numpad_icon"
                android:text="Numpad"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/numpadLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:gravity="center_horizontal">
        <LinearLayout
            android:id="@+id/liNumpadLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/num1Btn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="30sp" />
            <Button
                android:id="@+id/num2Btn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="30sp" />
            <Button
                android:id="@+id/num3Btn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="30sp" />
            <Button
                android:id="@+id/num4Btn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="30sp" />
            <Button
                android:id="@+id/num5Btn"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="30sp" />
            <Button
                android:id="@+id/num6Btn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="30sp" />
            <Button
                android:id="@+id/num7Btn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="30sp" />
            <Button
                android:id="@+id/num8Btn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="30sp" />
            <Button
                android:id="@+id/num9Btn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="30sp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
